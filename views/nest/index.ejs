<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/nest/nav.css">
<%- include("../partials/nest-nav") %> 
</head>
<body>

<main>
    <div class="row d-flex container-fluid">
        <div class="col-6 container-fluid">
          <h3>New Posts from People you Follow</h3>
            <% posts.forEach(post => { %>
                <div class="card">
                <% if (post.image) { %> 
                        <img src="" class="card-img-top" alt="...">
                        <% } %> 
                        <div class="card-body">
                          <h5 class="card-title text-center"><%= post.author.name %></h5>
                          <p class="card-text"><%= post.content %></p>
                          <p class="card-text">Liked by: <%= post.likes.length %> people!</p>
                          <form action="/nest/posts/<%= post._id %>/like" method="POST">
                                <button type="submit" class="btn btn-lg btn-success">üëç</button>
                          </form>
                          <% if(post.author._id.toString() === user.profile._id.toString() || user.profile.moderator == true) {%>
                          <form action="/nest/posts/<%= post._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-lg btn-danger">DELETE</button>
                          </form>
                          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editPost">
                            Edit Post
                        </button>  
                          <% } %> 
                        </div>
                    </div>
                  </div>
                  <div class="modal" id="editPost" tabindex="-1" aria-labelledby="editPost" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="editPost">Edit Post</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <form class="submit-form" action="/nest/posts/<%= post._id %>?_method=PUT" method="POST">
                            <div class="form-floating mb-3">
                                <textarea type="text" class="form-control" id="floatingInput" name="content" required><%= post.content %></textarea>
                                <label for="content">Content:</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" name="image" value="<%= post.image %>" >
                                <label for="image">Image URL:</label>
                            </div>
                        </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Post!</button>
                            </div>
                        </form>
                      </div>
                    </div>
                  </div>
            <% }) %> 

        </div>
        <div class="col-6 container-fluid">
            <div class="row container-fluid">
                <h3>New Flocks</h3>
                <% flocks?.forEach(flock => { %>
                  <a href="/nest/flocks/<%= flock._id %> ">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-center"><%= flock.name %> - Created by <%= flock.profiles[0].name %></h5>
                            <p class="card-text">Members: <%= flock.memberCount %></p>
                            <p class="card-text"><%= flock.desc %></p>
                        </div>
                        <form method="POST" action="/nest/flocks/<%= flock._id %>/join">
                          <% if (user) { %>
                              <button type="submit" class="btn btn-success">Join Flock!</button>
                              <% } %>
                          </form>
                    </div>
                  </a>
                <% }) %> 
            </div>
            <div class="row">
              <h3>New Profiles</h3>
                <% profiles?.forEach(profile => { %>
                    <div class="card">
                        <% if (profile.avatar) { %> 
                            <img style="height: 100px; width: 100px;" src="<%= profile.avatar %>" class="card-img" alt="<%= profile.name %>'s Avatar">
                        <% } %> 
                            <div class="card-body">
                              <h5 class="card-title text-center"><%= profile.name %></h5>
                              <% if (user.profile._id.toString() !== profile._id.toString()) { %>
                                <form action="/nest/<%= profile._id %>/follow" method="POST">
                                  <button type="submit" class="btn btn-lg btn-primary">Follow <%= profile.name %></button>
                                </form>
                              <% } %>
                              <form action="/nest/<%= profile._id %>" method="GET">
                                <button type="submit" class="btn btn-lg btn-primary">Go to Profile</button>
                              </form>
                            </div>
                        </div>
                      </div>
                <% }) %> 
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>