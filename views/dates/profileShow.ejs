<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/index/choose.css" />
<%- include("../partials/nav") %> 
</head>
<body> 
            <div class="row">
                <div>
                <h1>Profile Information</h1>
                <img src="<%= profile.avatar %> " alt="<%= profile.name %>'s avatar">
                <h2><%= profile.name %></h2>
                <p>Age: <%= profile.age %></p>
                <p>Gender: <%= profile.gender %></p>
                <p>Location: <%= profile.country %>, <%= profile.state %>, <%= profile.city %></p>
                <p>Favorite Bird: <%= profile.favBird %></p>
                <p>Birthday: <%= profile.birthday %></p>
                <p>Biography: <%= profile.bio %></p>
                <% if (user.profile._id.toString() === profile._id.toString()) { %>
                    <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#updateProfile">Update Profile</button>
                    <button class="btn btn-danger" type="button" data-bs-toggle="modal" data-bs-target="#deleteProfile">Delete Profile</button>
                    <% } %>
                </div>
            </div>

            <% if (user.profile._id.toString() === profile._id.toString()) { %>
              <a href="/date/<%= profile._id %>/schmedit"><button>Edit Profile</button></a>
           
            <form action="/dates/<%= profile._id %>/schmedit" method="POST">
              <button type="submit" class="btn btn-lg btn-primary">Updare</button>
            </form>
            <form action="/dates/<%= profile._id %>/schmedit" method="GET">
              <button type="submit" class="btn btn-lg btn-primary">Go to Profile</button>
            </form>
<% } %>


<%- include('../partials/footer') %>